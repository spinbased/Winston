{
  "display_information": {
    "name": "Winston Legal AI",
    "description": "AI Legal Defense System",
    "background_color": "#1a1d21"
  },
  "features": {
    "bot_user": {
      "display_name": "Winston",
      "always_online": true
    }
  },
  "oauth_config": {
    "scopes": {
      "bot": [
        "app_mentions:read",
        "channels:history",
        "channels:read",
        "chat:write",
        "commands",
        "files:read",
        "im:history",
        "im:read",
        "im:write",
        "users:read"
      ]
    }
  },
  "settings": {
    "event_subscriptions": {
      "bot_events": [
        "app_mention",
        "message.im"
      ]
    },
    "org_deploy_enabled": false,
    "socket_mode_enabled": false
  }
}
